### Input configuration
#
# Example configuration:
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Put your touchpad's ID to replace "Touchpad-ID" (keep the quotation marks)

input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
}

# Read `man 5 sway-input` for more information about this section.

input "60653:13923:Fancytech_FancyAlice66_Keyboard" {
    xkb_layout us,us_intl
    xkb_options ctrl:swapcaps
}

input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout us,us_intl
    xkb_options ctrl:swapcaps
}

# input type:keyboard {
#     xkb_layout us,us_intl,br
#     xkb_options ctrl:swapcaps
# }

##### MOUSE #####

input "2:7:SynPS/2_Synaptics_TouchPad" {
    tap enabled
    scroll_factor 0.3
    natural_scroll enabled
    accel_profile "flat"
    pointer_accel 0.7
}

input "2:10:TPPS/2_Elan_TrackPoint" {
    scroll_factor 0.3
    accel_profile "flat"
    pointer_accel 0.1
}

input "9354:23343:XCTECH_Wireless-Receiver" {
    accel_profile "flat"
    pointer_accel -0.5
}

bindsym Mod4+Space exec swaymsg input type:keyboard xkb_switch_layout next
bindsym Mod4+Shift+Space exec swaymsg input type:keyboard xkb_switch_layout prev

